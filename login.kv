    size_hint:.9,.8
    pos_hint : {"center_x": .5,"center_y":.5}
    BoxLayout:
        pos_hint : {"center_x": .5,"center_y":.5}
        orientation:'vertical'
        size_hint:.9,.4
        Label:
            text:"24x7 Hours\nApp Service"
            font_size:"30sp"
            color : 235/255,109/255,156/255,1
        Label:
            text:"Our app is always available for you"
            color :  235/255,109/255,156/255,1
    BoxLayout:
        pos_hint : {"center_x": .5,"center_y":.5}
        Image:
            source: root.img
<MeraButton>:
        
    line_color:235/255,109/255,156/255,0
    normal_color: 239/255,239/255,239/255,.4
    color_active: 239/255,239/255,239/255,.5
    
    font_size:'25sp'

<ForPassScreen>:
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            orientation:'vertical'
            BoxLayout:
                orientation:'vertical'
                
                pos_hint:{"top":.9,"left":.8}
                Button:
                    size_hint : .1,.5
                    background_color :(235/255,109/255,156/255,0)
                    background_normal: ''
                    text:"<"
                    font_size: "30sp"
                    color:[0,0,0,.5]
                    on_press:
                        app.manager.transition.direction = 'right'
                        app.manager.current = 'signin'
                Label:
                    text:"Forgot your password?"
                    bold:True
                    markup : True
                    font_size:'30sp'
                    color:[0,0,0,.7]
            BoxLayout:
                id : fpbox
                orientation:'vertical'
                pos_hint:{"top":1,"center_x":.5}
                size_hint:.8,.4
                spacing:"20sp"
                ClickableTextFieldRound:
                    id :phone_no
                    hint_text: "phone no"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    passr: False
                    BoxLayout:
                        pos_hint:{"right":.95,"bottom":1}
                        size_hint :None,None
                        Button:
                            size_hint :None,None
                            background_color :(235/255,109/255,156/255,0)
                            background_normal: ''

                            text:"Send OTP"
                            font_size: "12sp"
                            color:[0,0,0,.5]
                            on_press:
                                app.otpgen(self.parent.parent.ids.text_field.text)
                                root.start_timer()
                ClickableTextFieldRound:
                    id :otp_get
                    pos_hint: {"center_x": .5, "center_y": .5}
                    passr: False
                    hint_text:"Enter OTP"
                    BoxLayout:
                        pos_hint:{"right":.95,"bottom":1}
                        size_hint :None,None
                        Label:
                            id: otp_timing
                            size_hint :None,None
                            text: root.time
                            font_size: "12sp"
                            color:[1,0,0,.5]
                
            BoxLayout:
                pos_hint:{"right":.8,"top":1}
                size_hint :None,None
                Button:
                    size_hint :None,None
                    background_color :(235/255,109/255,156/255,0)
                    background_normal: ''
                   
                    text:"resend OTP"
                    font_size: "12sp"
                    color:[0,0,0,.5]
                    on_press:
                        print("on_prog")
            
                
            SmoothButton:
                pos_hint : {"center_x": .5,"center_y":.5}
                size_hint : .9,.25
                text:"Proceed"
                bold:True
                markup : True
                font_size:'25sp'
                color:[0,0,0,.5]
                on_release:
                    print(int(otp_get.ids.text_field.text)==app.my_otp)
                    app.manager.transition.direction = 'left'
                    app.manager.current = 'change_passo'

        BoxLayout:
            size_hint : 1,.65
    
